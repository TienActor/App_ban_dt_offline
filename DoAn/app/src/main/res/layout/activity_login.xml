<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_dn"
    tools:context="Account.LoginActivity"
    >
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-83dp"
         />
    <ImageView
        android:id="@+id/Logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập:"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:hint="Nhập tên đăng nhập"
            android:background="@drawable/bogoc"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu:"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/edPass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:hint="Nhập mật khẩu"
            android:padding="10dp"
            android:drawableLeft="@drawable/baseline_vpn_key_24"
            android:ems="10"
            android:drawablePadding="16dp"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:background="@drawable/bogoc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btLogin"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="ĐĂNG NHẬP"
                android:textAllCaps="false"
                android:backgroundTint="#0226E0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btregisterss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:hint=" Bạn không có tài khoản? ĐĂNG KÍ!"
                android:textStyle="bold"
                android:backgroundTint="#0226E0"
                android:textColorHint="#0000FF"
                android:layout_marginLeft="15dp"
                android:textSize="23sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>